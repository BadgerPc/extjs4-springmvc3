<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
	
		<mapping class="br.com.alexandre.model.Blog"/>
		<mapping class="br.com.alexandre.model.Cliente"/>
		<mapping class="br.com.alexandre.model.Estado"/>
		
		<mapping class="br.com.alexandre.model.Author"/>
		<mapping class="br.com.alexandre.model.Book"/>
		<mapping class="br.com.alexandre.model.Chapter"/>
	</session-factory>	
</hibernate-configuration>